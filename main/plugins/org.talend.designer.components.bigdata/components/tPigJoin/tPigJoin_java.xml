<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20090320A"
		STARTABLE="false" PARTITIONING="NONE" LOG4J_ENABLED="true">
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Processing/Hadoop</FAMILY>
	<FAMILY>Big Data/Pig</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="1" />
		<CONNECTOR NAME="PIGCOMBINE" CTYPE="FLOW" MAX_INPUT="1" MAX_OUTPUT="1" COLOR="086438" BASE_SCHEMA="FLOW"/>
		<CONNECTOR NAME="LOOKUP" CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="0" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1"/>
		<PARAMETER NAME="SCHEMA_COMBINE" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1" CONTEXT="PIGCOMBINE" GROUP="left"/>

		<PARAMETER NAME="LOOKUP_SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="21" CONTEXT="LOOKUP" GROUP="right"/>

		<PARAMETER NAME="LOOKUP_FILENAME" FIELD="FILE" NUM_ROW="22"
			REQUIRED="true" REPOSITORY_VALUE="FILE_PATH" GROUP="right">
			<DEFAULT>"__COMP_DEFAULT_FILE_DIR__/right.csv"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="FIELD_SEPARATOR_CHAR_LOOKUP" FIELD="TEXT" NUM_ROW="23" GROUP="right"
			REQUIRED="true" REPOSITORY_VALUE="FIELD_SEPARATOR">
			<DEFAULT>";"</DEFAULT>
		</PARAMETER>

	    <PARAMETER
	      NAME="JOIN_KEY"
	      FIELD="TABLE"
	      REQUIRED="true"
	      NUM_ROW="31"
	      NB_LINES="3"
	    >
	      <ITEMS>
	        <ITEM NAME="INPUT_COLUMN" FIELD="COLUMN_LIST" CONTEXT="INPUT"/>
	        <ITEM NAME="LOOKUP_COLUMN" FIELD="COLUMN_LIST" CONTEXT="LOOKUP"/>
	      </ITEMS>
	    </PARAMETER>

		<PARAMETER NAME="JOIN_MODE" FIELD="CLOSED_LIST" NUM_ROW="40" REQUIRED="true">
				<ITEMS DEFAULT="inner-join">
						<ITEM NAME="inner-join" VALUE="inner-join" />
						<ITEM NAME="left-outer-join" VALUE="left-outer-join" />
						<ITEM NAME="right-outer-join" VALUE="right-outer-join" />
						<ITEM NAME="full-outer-join" VALUE="full-outer-join" />
				</ITEMS>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="OPTIMIZE" FIELD="CHECK" REQUIRED="true" NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="USING" FIELD="CLOSED_LIST" NUM_ROW="10" REQUIRED="true" SHOW_IF="OPTIMIZE == 'true'">
				<ITEMS DEFAULT="REPLICATED">
						<ITEM NAME="REPLICATED" VALUE="replicated" />
						<ITEM NAME="SKEWED" VALUE="skewed" />
						<ITEM NAME="MERGE" VALUE="merge" />
				</ITEMS>
		</PARAMETER>

		<PARAMETER NAME="USE_PARTITION" FIELD="CHECK" REQUIRED="true" NUM_ROW="20" NOT_SHOW_IF="USING == 'SKEWED'">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="PARTITION" FIELD="TEXT" NUM_ROW="20" REQUIRED="true" SHOW_IF="(USE_PARTITION == 'true' AND USING != 'SKEWED')">
			<DEFAULT>"org.apache.pig.test.SimpleCustomPartitioner"</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="INCREASE_PARALLELISM" FIELD="CHECK" REQUIRED="true" NUM_ROW="30">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER NAME="REDUCE_NUMBER" FIELD="TEXT" REQUIRED="true" NUM_ROW="30" SHOW_IF="INCREASE_PARALLELISM == 'true'">
			<DEFAULT>2</DEFAULT>
		</PARAMETER>

	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
	</CODEGENERATION>
	<RETURNS />

</COMPONENT>
