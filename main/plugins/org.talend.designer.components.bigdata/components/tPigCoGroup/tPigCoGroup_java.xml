<COMPONENT>
	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.102" STATUS="ALPHA"
		COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20100926A"
		STARTABLE="false" SCHEMA_AUTO_PROPAGATE="false" DATA_AUTO_PROPAGATE="false" PARTITIONING="NONE">
		<SIGNATURE />
	</HEADER>

  <FAMILIES>
    <FAMILY>Processing/Hadoop</FAMILY>
	<FAMILY>Big Data/Pig</FAMILY>
  </FAMILIES>

	<DOCUMENTATION>
		<URL />
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MIN_INPUT="1" MAX_OUTPUT="0"/>
		<CONNECTOR NAME="PIGCOMBINE" CTYPE="FLOW" MAX_OUTPUT="1" COLOR="086438" BASE_SCHEMA="FLOW"/>
		<CONNECTOR CTYPE="LOOKUP" COMPONENT="tAdvancedHashPig"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="COMPONENT_OK" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="COMPONENT_ERROR" MAX_OUTPUT="0" MAX_INPUT="0"/>
		<CONNECTOR CTYPE="RUN_IF" MAX_OUTPUT="0" MAX_INPUT="0"/>		
	</CONNECTORS>
		
	<PARAMETERS>
	
		<PARAMETER NAME="SCHEMA" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1"/>
		<PARAMETER NAME="SCHEMA_COMBINE" FIELD="SCHEMA_TYPE" REQUIRED="true" NUM_ROW="1" CONTEXT="PIGCOMBINE"/>
		
		<PARAMETER NAME="GROUP_BY" FIELD="TABLE_BY_ROW" NUM_ROW="20"
 			NB_LINES="6" SHOW="true" >
 			<ITEMS>
 				<ITEM NAME="REFCOL" FIELD="CLOSED_LIST" />
 			</ITEMS>
 		</PARAMETER>
 		
		<PARAMETER NAME="OUTPUT_MAPPING" FIELD="TABLE" NUM_ROW="40"
            NB_LINES="6" SHOW="true" >
            <ITEMS BASED_ON_SCHEMA="true">
		        <ITEM NAME="FUNCTION" FIELD="CLOSED_LIST">
		            <ITEMS DEFAULT="COUNT">
		              <ITEM NAME="COUNT"  VALUE="COUNT"/>
		              <ITEM NAME="MIN"    VALUE="MIN"/>
		              <ITEM NAME="MAX"    VALUE="MAX"/>
		              <ITEM NAME="AVG"    VALUE="AVG"/>
		              <ITEM NAME="SUM"    VALUE="SUM"/>
					  <ITEM NAME="EMPTY"    VALUE="EMPTY"/>
		            </ITEMS>
		        </ITEM>
            	<ITEM NAME="PARENT_ROW" FIELD="CONNECTION_LIST" FILTER="INPUT:FLOW_MAIN|FLOW_REF"/>
             	<ITEM NAME="REFCOL" FIELD="OPENED_LIST" RAW="true" FILTER="PARENT_ROW" />
             </ITEMS>
        </PARAMETER>
			
	</PARAMETERS>
		
	<ADVANCED_PARAMETERS>
	
		<PARAMETER NAME="GROUP_OPTIMIZATION" FIELD="CLOSED_LIST" NUM_ROW="10">
			<ITEMS DEFAULT="NONE">
				<ITEM NAME="NONE" VALUE="NONE" />
				<ITEM NAME="COLLECTED" VALUE="COLLECTED" />
				<ITEM NAME="MERGE" VALUE="MERGE" />
			</ITEMS>
		</PARAMETER>
		
		<PARAMETER NAME="USE_PARTITION" FIELD="CHECK" REQUIRED="true" NUM_ROW="20">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="CUSTOM_PARTITIONER" FIELD="TEXT" NUM_ROW="20" SHOW_IF="USE_PARTITION == 'true'">
			<DEFAULT>"org.apache.pig.test.SimpleCustomPartitioner"</DEFAULT>
		</PARAMETER>
		
		<PARAMETER NAME="USE_INCREASE_PARALLELISM" FIELD="CHECK" REQUIRED="true" NUM_ROW="30">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
				
		<PARAMETER NAME="INCREASE_PARALLELISM" FIELD="TEXT" NUM_ROW="30" SHOW_IF="USE_INCREASE_PARALLELISM == 'true'">
			<DEFAULT>"2"</DEFAULT>
		</PARAMETER>
		
	</ADVANCED_PARAMETERS>

	<CODEGENERATION/>
	
	<RETURNS/>
	
</COMPONENT>
