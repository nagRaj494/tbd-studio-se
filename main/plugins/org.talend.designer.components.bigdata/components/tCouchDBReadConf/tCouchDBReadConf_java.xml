<COMPONENT>
	<HEADER
		PLATEFORM="ALL"
		SERIAL=""
		VERSION="0.102"
		STATUS="ALPHA"

		COMPATIBILITY="ALL"
		AUTHOR="Talend"
		RELEASE_DATE="20130305A"
		SCHEMA_AUTO_PROPAGATE="false"
		DATA_AUTO_PROPAGATE="false"
		STARTABLE="true"
		VISIBLE="false"
		TECHNICAL="true"
		LOG4J_ENABLED="true"
  	>
    	<SIGNATURE/>
	</HEADER>

	<FAMILIES>
	  	<FAMILY>Databases/CouchDB</FAMILY>
		<FAMILY>Big Data/CouchDB</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="1" />
      	<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
      	<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
      	<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
      	<CONNECTOR CTYPE="COMPONENT_OK" />
      	<CONNECTOR CTYPE="COMPONENT_ERROR" />
      	<CONNECTOR CTYPE="RUN_IF" />
  	</CONNECTORS>

  	<PARAMETERS>

    	 <PARAMETER
			NAME="SCHEMA"
			FIELD="SCHEMA_TYPE"
			NUM_ROW="5"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

	    <PARAMETER
		    NAME="USE_EXISTING_CONNECTION"
		    FIELD="CHECK"
		    NUM_ROW="10"
		    GROUP="CONNECTION_CONF"
	    >
	     	<DEFAULT>false</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
		    NAME="CONNECTION"
		    FIELD="COMPONENT_LIST"
		    REQUIRED="true" FILTER="tCouchDBConnection"
		    NUM_ROW="10"
		    SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
		    GROUP="CONNECTION_CONF"
		/>

	    <PARAMETER
			FIELD="TEXT"
			NAME="HOST"
			NUM_ROW="15"
			REQUIRED="true"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="PORT"
			NUM_ROW="15"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<DEFAULT>5984</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="DATABASE"
			NUM_ROW="20"
			REQUIRED="true"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
		<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="DB_VERSION"
			FIELD="CLOSED_LIST"
			NUM_ROW="20"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<ITEMS DEFAULT="COUCHDB_1_0_2">
				<ITEM NAME="COUCHDB_1_0_2" VALUE="COUCHDB_1_0_2" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER
			FIELD="CHECK"
			NAME="REQUIRED_AUTHENTICATION"
			NUM_ROW="24"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="USERNAME"
			NUM_ROW="25"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (REQUIRED_AUTHENTICATION == 'true')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="PASSWORD"
			NAME="PASSWORD"
			NUM_ROW="25"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (REQUIRED_AUTHENTICATION == 'true')"
		   	GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="CHECK"
			NAME="USE_TRIGGER_REPLICATE"
			NUM_ROW="50"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="REPLICATION"
		>
            <DEFAULT>"false"</DEFAULT>
        </PARAMETER>

        <PARAMETER
	        FIELD="TABLE"
	        NAME="REPLICATE_TARGET_DB"
	        REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_TRIGGER_REPLICATE == 'true')"
	        NUM_ROW="55"
	        NB_LINES="5"
	        SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_TRIGGER_REPLICATE == 'true')"
	        GROUP="REPLICATION"
        >
            <ITEMS>
                <ITEM NAME="TARGET_DB_NAME" FIELD="TEXT" />
                <ITEM NAME="CONTINUOUS" FIELD="CHECK" VALUE="true"/>
                <ITEM NAME="CREATE_TARGET" FIELD="CHECK" VALUE="true"/>
                <ITEM NAME="CANCEL_REPLICATE" FIELD="CHECK" />

            </ITEMS>
        </PARAMETER>

        <PARAMETER NAME="QUERY_BY_VIEW"
	    	FIELD="CHECK"
	      	NUM_ROW="60"
	      	REQUIRED="true"
	  		GROUP="QUERY_OPTION"
	  	>
	      	<DEFAULT>false</DEFAULT>
    	</PARAMETER>

        <PARAMETER NAME="DOC"
			FIELD="TEXT"
		   	SHOW_IF="(QUERY_BY_VIEW == 'true')"
		   	REQUIRED="true"
		   	NUM_ROW="65"
		   	GROUP="QUERY_OPTION"
		>
	      <DEFAULT>""</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
	    	NAME="DOC_ACTION"
	    	FIELD="CLOSED_LIST"
	    	SHOW_IF="(QUERY_BY_VIEW == 'true')"
	    	NUM_ROW="65"
	    	GROUP="QUERY_OPTION"
	    >
	    	<ITEMS DEFAULT="NONE">
				<ITEM NAME="NONE" VALUE="NONE" />
		        <ITEM NAME="DROP_CREATE" VALUE="DROP_CREATE"/>
		        <ITEM NAME="CREATE" VALUE="CREATE"/>
		        <ITEM NAME="CREATE_IF_NOT_EXISTS" VALUE="CREATE_IF_NOT_EXISTS"/>
		        <ITEM NAME="DROP_IF_EXISTS_AND_CREATE" VALUE="DROP_IF_EXISTS_AND_CREATE" />
	      	</ITEMS>
	    </PARAMETER>

	    <PARAMETER NAME="VIEW"
	    	FIELD="TEXT"
	    	REQUIRED="true"
	    	SHOW_IF="(QUERY_BY_VIEW == 'true')"
	    	NUM_ROW="70"
	    	GROUP="QUERY_OPTION"
	    >
	    	<DEFAULT>""</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
	   		NAME="VIEW_ACTION"
	    	FIELD="CLOSED_LIST"
	    	SHOW_IF="QUERY_BY_VIEW == 'true'"
	    	NUM_ROW="70"
	    	GROUP="QUERY_OPTION"
	    >
	    	<ITEMS DEFAULT="NONE">
	        	<ITEM NAME="NONE" VALUE="NONE" />
		        <ITEM NAME="CREATE" VALUE="CREATE"/>
	    	</ITEMS>
	    </PARAMETER>

	    <PARAMETER NAME="MAP"
	    	FIELD="MEMO"
	    	REQUIRED="true"
	    	SHOW_IF="(QUERY_BY_VIEW == 'true') and (VIEW_ACTION != 'NONE')"
	    	NUM_ROW="75"
	    	GROUP="QUERY_OPTION"
	    >
	   		<DEFAULT>"function (doc, meta) { emit(doc.name, meta.id); }"</DEFAULT>
	    </PARAMETER>

	    <PARAMETER NAME="REDUCE"
	    	FIELD="MEMO"
	      	REQUIRED="true"
	      	SHOW_IF="(QUERY_BY_VIEW == 'true') and (VIEW_ACTION != 'NONE')"
	      	NUM_ROW="75"
	   		GROUP="QUERY_OPTION"
	   	>
	      	<DEFAULT>""</DEFAULT>
	    </PARAMETER>

		<PARAMETER NAME="STARTKEY"
	    	FIELD="TEXT"
	      	NUM_ROW="80"
	     	GROUP="QUERY_OPTION"
	      	REQUIRED="false"
	 	>
	      	<DEFAULT></DEFAULT>
	   	</PARAMETER>

	    <PARAMETER NAME="ENDKEY"
	      	FIELD="TEXT"
	     	NUM_ROW="80"
	      	GROUP="QUERY_OPTION"
	      	REQUIRED="false">
	      	<DEFAULT></DEFAULT>
		</PARAMETER>

	    <PARAMETER NAME="STARTKEY_DOCID"
	      	FIELD="TEXT"
	      	NUM_ROW="85"
	      	GROUP="QUERY_OPTION"
	      	REQUIRED="false"
	  	>
	      	<DEFAULT></DEFAULT>
	    </PARAMETER>

	    <PARAMETER NAME="ENDKEY_DOCID"
	      	FIELD="TEXT"
	      	NUM_ROW="85"
	      	GROUP="QUERY_OPTION"
	      	REQUIRED="false"
	   	>
	     	 <DEFAULT></DEFAULT>
	    </PARAMETER>

		<PARAMETER NAME="ISREDUCE"
	      	FIELD="CHECK"
	      	REQUIRED="true"
	      	SHOW_IF="(QUERY_BY_VIEW == 'true') and (INCLUDE_DOCS == 'false')"
	      	NUM_ROW="90"
	    	GROUP="QUERY_OPTION"
	   	>
	    </PARAMETER>

	    <PARAMETER NAME="INCLUDE_DOCS"
	      	FIELD="CHECK"
	      	REQUIRED="true"
	      	SHOW_IF="(ISREDUCE == 'false')"
	      	NUM_ROW="90"
	   		GROUP="QUERY_OPTION"
	   	>
	    </PARAMETER>

	    <PARAMETER NAME="DESCENDING"
	      	FIELD="CHECK"
	      	REQUIRED="true"
	      	NUM_ROW="90"
	   		GROUP="QUERY_OPTION"
	   	>
	    </PARAMETER>

		<PARAMETER NAME="GROUP"
	      	FIELD="CHECK"
	      	NUM_ROW="115"
	      	GROUP="QUERY_OPTION"
	      	SHOW_IF="(QUERY_BY_VIEW == 'true') and (ISREDUCE == 'true')"
	      	REQUIRED="false"
	  	>
	  		<DEFAULT>false</DEFAULT>
	   	</PARAMETER>

	    <PARAMETER NAME="GROUP_LEVEL"
	      	FIELD="INTEGER"
	      	NUM_ROW="115"
	      	GROUP="QUERY_OPTION"
	      	SHOW_IF="(ISREDUCE == 'true') and (GROUP == 'true')"
	      	REQUIRED="false"
	  	>
	   	</PARAMETER>

        <PARAMETER NAME="ADD_OPTION"
	      	FIELD="CHECK"
	      	NUM_ROW="125"
	      	GROUP="QUERY_OPTION"
	  	>
	  		<DEFAULT>false</DEFAULT>
	   	</PARAMETER>

        <PARAMETER
	        NAME="OPTIONS"
	        FIELD="TABLE"
	        NUM_ROW="125"
	        NB_LINES="5"
	        SHOW_IF="(ADD_OPTION == 'true')"
	        GROUP="QUERY_OPTION"
	  	>
            <ITEMS>
                <ITEM NAME="PARAMETER" FIELD="TEXT" />
                <ITEM NAME="VALUE" FIELD="TEXT" />
            </ITEMS>
        </PARAMETER>

		<PARAMETER
	      NAME="JSONFIELD"
	      FIELD="COLUMN_LIST"
	      REQUIRED="true"
	      SHOW_IF="ISJSON == 'true'"
	      NUM_ROW="140"
	    >
    	</PARAMETER>

        <PARAMETER NAME="LIMIT"
	      	FIELD="INTEGER"
	      	NUM_ROW="120"
	      >
	      	<DEFAULT>10000</DEFAULT>
	    </PARAMETER>


  </PARAMETERS>
	<ADVANCED_PARAMETERS>


	</ADVANCED_PARAMETERS>

