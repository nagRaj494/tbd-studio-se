			<IMPORT NAME="httpcore-4.2.4.jar" MODULE="httpcore-4.2.4.jar" MVN="mvn:org.talend.libraries/httpcore-4.2.4/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.apache.http/lib/httpcore-4.2.4.jar" REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') AND (DB_VERSION == 'COUCHDB_1_0_2')" />
		</IMPORTS>
