	    <CONNECTOR CTYPE="COMPONENT_ERROR"/>
	    <CONNECTOR CTYPE="RUN_IF"/>
  	</CONNECTORS>

  	<PARAMETERS>

    	 <PARAMETER
			NAME="SCHEMA_FLOW"
			FIELD="SCHEMA_TYPE"
			NUM_ROW="5"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

	    <PARAMETER
		    NAME="USE_EXISTING_CONNECTION"
		    FIELD="CHECK"
		    NUM_ROW="10"
		    GROUP="CONNECTION_CONF"
	    >
	     	<DEFAULT>false</DEFAULT>
	    </PARAMETER>

	    <PARAMETER
		    NAME="CONNECTION"
		    FIELD="COMPONENT_LIST"
		    REQUIRED="true" FILTER="tCouchDBConnection"
		    NUM_ROW="10"
		    SHOW_IF="USE_EXISTING_CONNECTION == 'true'"
		    GROUP="CONNECTION_CONF"
		/>

	    <PARAMETER
			FIELD="TEXT"
			NAME="HOST"
			NUM_ROW="15"
			REQUIRED="true"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="PORT"
			NUM_ROW="15"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<DEFAULT>5984</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="DATABASE"
			NUM_ROW="20"
			REQUIRED="true"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
		<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="CHECK"
			NAME="REQUIRED_AUTHENTICATION"
			NUM_ROW="24"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>false</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="TEXT"
			NAME="USERNAME"
			NUM_ROW="25"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (REQUIRED_AUTHENTICATION == 'true')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			FIELD="PASSWORD"
			NAME="PASSWORD"
			NUM_ROW="25"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (REQUIRED_AUTHENTICATION == 'true')"
			GROUP="AUTHENTICATION"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="DB_VERSION"
			FIELD="CLOSED_LIST"
			NUM_ROW="20"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="CONNECTION_CONF"
		>
			<ITEMS DEFAULT="COUCHDB_1_0_2">
				<ITEM NAME="COUCHDB_1_0_2" VALUE="COUCHDB_1_0_2" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER
			FIELD="CHECK"
			NAME="USE_TRIGGER_REPLICATE"
			NUM_ROW="50"
			SHOW_IF="(USE_EXISTING_CONNECTION == 'false')"
			GROUP="REPLICATION"
		>
            <DEFAULT>"false"</DEFAULT>
        </PARAMETER>

        <PARAMETER
	        FIELD="TABLE"
	        NAME="REPLICATE_TARGET_DB"
	        REQUIRED_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_TRIGGER_REPLICATE == 'true')"
	        NUM_ROW="55"
	        NB_LINES="5"
	        SHOW_IF="(USE_EXISTING_CONNECTION == 'false') AND (USE_TRIGGER_REPLICATE == 'true')"
	        GROUP="REPLICATION"
        >
            <ITEMS>
                <ITEM NAME="TARGET_DB_NAME" FIELD="TEXT" />
 				<ITEM NAME="CONTINUOUS" FIELD="CHECK" VALUE="true"/>
                <ITEM NAME="CREATE_TARGET" FIELD="CHECK" VALUE="true"/>
                <ITEM NAME="CANCEL_REPLICATE" FIELD="CHECK" />

            </ITEMS>
        </PARAMETER>

        <PARAMETER
			NAME="DATA_ACTION"
			FIELD="CLOSED_LIST"
			NUM_ROW="60"
		>
			<ITEMS DEFAULT="INSERT">
				<ITEM NAME="INSERT" VALUE="INSERT" />
				<ITEM NAME="UPDATE" VALUE="UPDATE" />
				<ITEM NAME="UPSERT" VALUE="UPSERT" />
				<ITEM NAME="DELETE" VALUE="DELETE" />
			</ITEMS>
		</PARAMETER>

        <PARAMETER
	        NAME="JSONFIELD"
	        FIELD="CLOSED_LIST"
	        REQUIRED="true"
	        NUM_ROW="65"
	        REQUIRED_IF="true"
	        SHOW_IF="false"
	    >
		     <ITEMS DEFAULT="jsonDoc">
	            <ITEM NAME="jsonDoc" VALUE="jsonDoc" />
	        </ITEMS>
	    </PARAMETER>

	    <PARAMETER
	        NAME="KEY"
	        FIELD="PREV_COLUMN_LIST"
	        REQUIRED="true"
	        NUM_ROW="68"
	        GROUP="JSON_CONFIGURATION"
	    >
	    </PARAMETER>

        <PARAMETER
	      	NAME="DIE_ON_ERROR"
	      	FIELD="CHECK"
	      	NUM_ROW="100"
	    >
	      	<DEFAULT>false</DEFAULT>
	    </PARAMETER>
	    <PARAMETER
		    NAME="DESTINATION"
		    FIELD="TEXT"
            RAW="true"
		    NUM_ROW="110"
	        REQUIRED="true"
	        SHOW_IF="false"
	  	>
        	<DEFAULT>tCouchDBWriteConf_1</DEFAULT>
    	</PARAMETER>

  </PARAMETERS>
	<ADVANCED_PARAMETERS>


	</ADVANCED_PARAMETERS>

