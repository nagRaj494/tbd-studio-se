	    STARTABLE="false"
	    DATA_AUTO_PROPAGATE="false"
	    TECHNICAL="true"
		PARTITIONING="NONE"
		LOG4J_ENABLED="true"
  	>
    	<SIGNATURE/>
	</HEADER>

	<FAMILIES>
	  	<FAMILY>Databases/CouchDB</FAMILY>
		<FAMILY>Big Data/CouchDB</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

