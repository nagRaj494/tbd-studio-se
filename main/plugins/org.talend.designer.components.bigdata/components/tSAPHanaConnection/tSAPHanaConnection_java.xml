<COMPONENT>
	<HEADER
		PLATEFORM="ALL"
		SERIAL=""
		VERSION="0.102"
		STATUS="ALPHA"
		COMPATIBILITY="ALL"
		AUTHOR="Talend"
		RELEASE_DATE="20130909P"
		STARTABLE="true"
		LOG4J_ENABLED="true"
	>
		<SIGNATURE/>
	</HEADER>

	<FAMILIES>
		<FAMILY>Databases/SAP Hana</FAMILY>
		<FAMILY>ELT/Connections</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL/>
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="FLOW" MAX_INPUT="0" MAX_OUTPUT="0"/>
		<CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="0" MAX_INPUT="1"/>
		<CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" />
		<CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" />
		<CONNECTOR CTYPE="COMPONENT_OK"/>
		<CONNECTOR CTYPE="COMPONENT_ERROR"/>
		<CONNECTOR CTYPE="RUN_IF"/>
	</CONNECTORS>

	<PARAMETERS>

		<PARAMETER
			NAME="PROPERTY"
			FIELD="PROPERTY_TYPE"
			REPOSITORY_VALUE="DATABASE:SAPHANA"
			NUM_ROW="10"
		/>
		<PARAMETER
			NAME="DB_VERSION"
			FIELD="CLOSED_LIST"
			NUM_ROW="20"
			REPOSITORY_VALUE="DB_VERSION"
		>
			<ITEMS DEFAULT="HDB_1_0">
				<ITEM NAME="HDB_1_0" VALUE="HDB_1_0" />
			</ITEMS>
		</PARAMETER>

		<PARAMETER
			NAME="HOST"
			FIELD="TEXT"
			NUM_ROW="25"
			REQUIRED="true"
			REPOSITORY_VALUE="SERVER_NAME"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="TYPE"
			FIELD="TEXT"
			NUM_ROW="25"
			SHOW="false"
			REPOSITORY_VALUE="TYPE"
		>
			<DEFAULT>SAPHana</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="PORT"
			FIELD="TEXT"
			NUM_ROW="25"
			REQUIRED="true"
			REPOSITORY_VALUE="PORT"
		>
			<DEFAULT>"30015"</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="TABLESCHEMA"
			FIELD="TEXT"
			NUM_ROW="30"
			REQUIRED="true"
			REPOSITORY_VALUE="SCHEMA"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="USER"
			FIELD="TEXT"
			NUM_ROW="35"
			REQUIRED="true"
			REPOSITORY_VALUE="USERNAME"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="PASS"
			FIELD="PASSWORD"
			NUM_ROW="35"
			REQUIRED="true"
			REPOSITORY_VALUE="PASSWORD"
		>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

	    <PARAMETER
	      NAME="ENCODING"
	      FIELD="ENCODING_TYPE"
	      NUM_ROW="45"
	      REQUIRED="true"
	      SHOW="false"
	    >
	      <DEFAULT>"ISO-8859-15"</DEFAULT>
	    </PARAMETER>
		<PARAMETER
			NAME="PROPERTIES"
			FIELD="TEXT"
			NUM_ROW="50"
			>
			<DEFAULT>""</DEFAULT>
		</PARAMETER>

		<PARAMETER
			NAME="NOTE"
			FIELD="LABEL"
			NUM_ROW="51"
			>
			<DEFAULT>*Note: Example for Additional JDBC Parameters: "parameterName1=value1&amp;&amp;parameterName2=value2"</DEFAULT>
		</PARAMETER>

	</PARAMETERS>

	<ADVANCED_PARAMETERS>
		<PARAMETER NAME="AUTO_COMMIT" FIELD="CHECK" NUM_ROW="10">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT NAME="SAPHANA_1_0"  MODULE="ngdbc.jar" MVN="mvn:org.talend.libraries/ngdbc/6.0.0"  UrlPath="platform:/plugin/org.talend.libraries.jdbc.saphana/lib/ngdbc.jar" REQUIRED_IF="(DB_VERSION == 'HDB_1_0')" />
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS/>
</COMPONENT>
